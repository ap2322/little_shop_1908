<h1>Orders</h1>

<section>
  <p> <%= @order.name %></p>
  <p> <%= @order.address %></p>
  <p> <%= @order.city %></p>
  <p> <%= @order.state %></p>
  <p> <%= @order.zip %></p>
</section>

<%= render partial: '/partials/items_cart_order_table',
            locals: { items: @order.items,
                      cart_path: false,
                      footer_row: 5,
                      orders_path: true}%>

<table>
  <tr>
    <td>Grand Total: <%= number_to_currency(@order.grand_total) %></td>
  </tr>
</table>
<p> Date of Order: <%= @order.created_at.strftime("%D") %></p>
<% if verified %>
  <%= link_to 'Delete Order', "/orders/verified_order/#{@order.verif}", method: :delete %>
  <%= link_to 'Update Shipping Address', "/verified_order/#{@order.verif}/edit" %>
  <%= link_to 'Remove Items from Order', "/verified_order/#{@order.verif}/remove_items" %>
<% end %>
