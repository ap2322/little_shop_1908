<h1>Create New Review For <%=link_to @item.name, "/items/#{@item.id}" %></h1>

<center>
  <%= form_tag "/items/#{@item.id}/reviews", method: :post do %>
    <%= label_tag :title, "Title" %>
    <%= text_field_tag :title %>

    <%= label_tag :content, "Content" %>
    <%= text_field_tag :content %>

    <%= label_tag :rating, "Rating" %>
    <%= number_field_tag :rating, nil, in: 1...6 %>

    <%= submit_tag "Submit Review" %>
  <% end %>
</center>
